@model MovieStoreMVC.Models.Domain.Movie
@{
}
@Html.ValidationSummary()
<form class="w-40" asp-action="Update" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Edit Movie</h2>
    <input type="hidden" class="input" asp-for="Id">
    <input type="hidden" class="input" asp-for="MovieImage">

    <div class="input-container">
        <label asp-for="Title" class="w-40">MovieName</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"></span>
    </div>

    <div class="input-container">
        <label asp-for="ImageFile" class="w-40">Image</label>
        <input type="file" asp-for="ImageFile">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ImageFile"></span>
    </div>

    <div class="input-container">
        <label asp-for="Genres" class="w-40">Categories</label>
        <select asp-items="Model.GenreByMovie" class="input" asp-for="Genres">
            <option>--Select--</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Genres"></span>
    </div>

    <div class="input-container">
        <label asp-for="ReleaseYear" class="w-40">Release Year</label>
        <input type="text" class="input" asp-for="ReleaseYear">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ReleaseYear"></span>
    </div>

    <div class="input-container">
        <label asp-for="Cast" class="w-40">Cast</label>
        <input type="text" class="input" asp-for="Cast">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Cast"></span>
    </div>

    <div class="input-container">
        <label asp-for="Director" class="w-40">Director</label>
        <input type="text" class="input" asp-for="Director">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Director"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1" id="myAlert">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/Movie/GetAll">All Genres</a>
    </div>
</form>
@section Scripts {
    <script>
        // Wait for 5 seconds and then hide the div using jQuery
        $(document).ready(function () {
            setTimeout(function () {
                $('#myAlert').hide();
            }, 10000); // 5000 milliseconds = 5 seconds
        });
    </script>
}